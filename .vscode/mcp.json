{
	"servers": {
		"weather": {
			"url": "http://127.0.0.1:8000/mcp",
			"type": "streamable_http"
		},
		"playwright": {
      "url": "http://localhost:8931/mcp"
    },
		"githubmcp": {
      "command": "npx",
			"args": [
				"-y", 
				"@modelcontextprotocol/server-github"
      ],
			"env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": ""
        }
    },
		"perplexity": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "server-perplexity-ask"],
      "env": {
        "PERPLEXITY_API_KEY": ""
      }
    }
	},
